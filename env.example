# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/admin
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/admin

# RateHawk API Integration
# Get your credentials from your RateHawk Account Manager
# Documentation: https://docs.ratehawk.com
RATEHAWK_API_KEY=your_api_key_here
RATEHAWK_KEY_ID=your_key_id_here
RATEHAWK_API_URL=https://api.ratehawk.com
RATEHAWK_SANDBOX=false

# Location Search (Optional)
